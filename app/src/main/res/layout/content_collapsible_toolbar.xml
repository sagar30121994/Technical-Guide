<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileView"
        android:layout_width="100dp"
        android:layout_height="100dp"

        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:elevation="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"


        android:text=""
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="20sp"
        android:layout_below="@+id/profileView"
        android:layout_alignEnd="@+id/profileView"
        android:layout_marginEnd="25dp" />



    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="18dp"
        android:layout_alignTop="@+id/profileView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp" />

    <TextView
        android:id="@+id/displayEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayName"

        android:layout_alignParentStart="true"
        android:layout_marginLeft="130dp"

        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/TextUniversity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rank"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="University    :   "
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/nameUniversity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rank"
        android:layout_marginTop="16dp"
        android:text="-----------------"
        android:layout_marginLeft="150dp"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textStyle="bold"


        />


    <TextView
        android:id="@+id/TextBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameUniversity"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Branch          :   "
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/nameBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameUniversity"
        android:layout_marginTop="16dp"
        android:text="------------------"
        android:layout_marginLeft="150dp"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/TextYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameBranch"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Year                :   "
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/nameYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameBranch"
        android:layout_marginTop="16dp"
        android:text="------------------"
        android:layout_marginLeft="150dp"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textStyle="bold" />




</RelativeLayout>