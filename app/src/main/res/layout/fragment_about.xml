<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="sagar.cybernetics.com.technicalguide.fragment.AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
       android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/image"
        android:src="@drawable/bitmap"/>

    <TextView
        android:layout_below="@+id/image"
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/idtext"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        android:textColor="@color/question"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_below="@+id/idtext"
        android:text="V1.0"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/ver"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ver"
        android:textStyle="italic|bold"
        android:id="@+id/copy"
        android:layout_marginTop="24sp"
        android:layout_centerHorizontal="true"
        android:text="Â©2017 Technical Guide"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/copy"
        android:textStyle="italic|bold"
        android:id="@+id/visit"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="32dp"
        android:text="Visit us on"/>

<ImageView
    android:layout_width="50dp"
   android:layout_centerInParent="true"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/copy"
    android:id="@+id/fb"
    android:background="@drawable/fb_icon"
    android:layout_height="50dp" />


</RelativeLayout>
